@model List<HotelProject.WebUI.Dtos.AppUserDto.ResultAppUserWithWorkLocationDto>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="row">
    <table class="table table-xs mb-0">
        <thead>
            <tr>
                <th># Ad Soyad</th>
                <th>Kullanıcı Adı</th>
                <th>Çalıştığı Şube</th>
                <th>Şehir</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                    <td>@item.UserName</td>
                    <td>@item.WorkLocationName</td>
                    <td>@item.City</td>
                    <td><i class="fa fa-circle-o text-success  mr-2"></i> Aktif</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<a href="/Register/Index/" class="btn btn-primary">Yeni Kullanıcı Kayıdı</a>

