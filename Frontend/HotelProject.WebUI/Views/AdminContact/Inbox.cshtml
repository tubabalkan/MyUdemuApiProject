@model List<InboxContactDto>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="email-left-box">
                <a href="email-compose.html" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                @await Html.PartialAsync("SideBarAdminContactPartial")
                @await Html.PartialAsync("SideBarAdminContactCategoryPartial")
            </div>
            <div class="email-right-box">
                <div role="toolbar" class="toolbar">
                    <div class="btn-group">
                        <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
                            Gelen Mesajlar <span class="caret m-l-5"></span>
                        </button>
                        
                    </div>
                </div>
                <div class="email-list m-t-15">
                    @foreach(var item in Model)
                    {
                        <div class="message">
                            <a href="email-read.html">
                                <div class="col-mail col-mail-1">
                                    <div class="email-checkbox">
                                        <input type="checkbox" id="chk2">
                                        <label class="toggle" for="chk2"></label>
                                    </div><span class="star-toggle ti-star"></span>
                                </div>
                                <div class="col-mail col-mail-2">
                                    <div class="subject">Ingredia Nutrisha, A collection of textile samples lay spread out on the table - Samsa was a travelling salesman - and above it there hung a picture</div>
                                    <div class="date">11:49 am</div>
                                </div>
                            </a>
                        </div>
                    }
                 
                </div>
                <!-- panel -->

            </div>
        </div>
    </div>
</div>

