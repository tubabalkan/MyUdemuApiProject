@model List<HotelProject.WebUI.Dtos.BookingDto.ResultBookingLast6Dto>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>Müşteri İsim Soyisim</th>
                                    <th>Şehir</th>
                                    <th>Ülke</th>
                                    <th>Durum </th>
                                    <th> </th>
                                    <th>Rezervasyon Tarihi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.City</td>
                                        <td>
                                            <span>@item.Country</span>
                                        </td>
                                        @if(item.Status == "Onaylandı")
                                        {
                                            <td>
                                                <div>
                                                    <div class="progress" style="height: 6px">
                                                        <div class="progress-bar bg-success" style="width: 100%"></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td><i class="fa fa-circle-o text-success  mr-2"></i> @item.Status</td>
                                        }
                                        @if (item.Status == "İptal Edildi")
                                        {
                                            <td>
                                                <div>
                                                    <div class="progress" style="height: 6px">
                                                        <div class="progress-bar bg-danger " style="width: 10%"></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td><i class="fa fa-circle-o text-danger   mr-2"></i> @item.Status</td>
                                        }
                                        @if (item.Status == "Onay Bekliyor")
                                        {
                                            <td>
                                                <div>
                                                    <div class="progress" style="height: 6px">
                                                        <div class="progress-bar bg-warning " style="width: 50%"></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td><i class="fa fa-circle-o text-warning  ss  mr-2"></i> @item.Status</td>
                                        }
                                            @if (item.Status == "Müşteri Aranacak")
                                        {
                                            <td>
                                                <div>
                                                    <div class="progress" style="height: 6px">
                                                        <div class="progress-bar bg-secondary " style="width: 70%"></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td><i class="fa fa-circle-o text-secondary  ss  mr-2"></i> @item.Status</td>
                                        }
                                        <td>
                                            <span>@item.Checkin.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))  - </span>
                                            <span class="m-0 pl-3">@item.Checkout.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</span>
                                        </td>
                                    </tr>
                                }
                            
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
