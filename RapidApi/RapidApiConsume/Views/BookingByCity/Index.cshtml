@model List<BookingApiViewModel.Result>
@{
    Layout = null;
    int count = 0;
}


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    @using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
    {
        <label>Şehir Id Bilgisini Giriniz</label>
        <input type="text" class="form-control" name="cityId" />
        <br />
        <button class="btn btn-primary">Şehir için Otel Bul</button>
    }
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Otel Adı</th>
            <th>Otel Puanı</th>
            <th>Detaylar</th>

        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count.</td>
                <td>@item.name</td>
                <td>@item.reviewCount</td>
                <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>

            </tr>
        }
    </table>
</div>

